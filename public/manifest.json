{
  "name": "Shopify Themes",
  "description": "Interface for Shopify developers to have quick access to multiple Shopify store preview theme lists.",
  "version": "0.1.9",
  "manifest_version": 3,
  "action": {
      "default_popup": "index.html",
      "default_title": "Open the popup"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://*.myshopify.com/"],
  "background": {
    "service_worker": "background.js"
  }
}